{{#partial "contenido"}}

<section class = "content">
    <a class = "link_boton" href = "proveedores/registrar_proveedor">  Registrar Proveedor  </a>
    <div>
    	PROVEEDORES:
        <table>
    	<tr>
            <th> Id </th>
            <th> Razon social </th>
            <th> DNI/CUIL/CUIT </th>
            <th> Pais </th>
            <th> Provincia </th>
            <th> Ciudad </th>
            <th> Direccion </th>
            <th> </th>
        </tr>
    	{{#each proveedores}}
    		<tr>
    		<td>{{ id }}</td>
       		<td>{{ razonSocial }}</td>
       		<td>{{ dniCuilCuit }}</td>
       		<td>{{ direccionPostal.pais }} </th>
       		<td>{{ direccionPostal.provincia }} </th>
       		<td>{{ direccionPostal.ciudad }} </th>
       		<td>{{ direccionPostal.direccion }} </th>
            <td><a href = "{{ urlDelete }}">Borrar</a></td>
       		</tr>
    	{{/each}}
    	</table>
    </div>
    
        <div id="popupTieneComprasPendientes" class="overlay">
		<div class="popup">
			<h2>ERROR. No se puede borrar el proveedor</h2>
			<a class="close" href="#">&times;</a>
			<div class="content">
				No se puede borrar proveedores que se encuentran compras pendientes.
			</div>
		</div>
	</div>
    
    <div id="popupTieneCompras" class="overlay">
		<div class="popup">
			<h2>ERROR. No se puede borrar el proveedor</h2>
			<a class="close" href="#">&times;</a>
			<div class="content">
				No se puede borrar proveedores que se encuentran compras.
			</div>
		</div>
	</div>   

    <div id="popupTienePresupuestos" class="overlay">
		<div class="popup">
			<h2>ERROR. No se puede borrar el proveedor</h2>
			<a class="close" href="#">&times;</a>
			<div class="content">
				No se puede borrar proveedores que se encuentran en presupuestos.
			</div>
		</div>
	</div>
	    
</section>
<br/>
    <a class = "link_boton" href = "/">  Volver  </a>

{{/partial}}

{{>layout.hbs}}